<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HardenSystemSecurity.Pages.Logs"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:systemIO="using:System.IO"
    xmlns:CC="using:CommonCore.Others"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    FlowDirection="{x:Bind ViewModel.AppSettings.ApplicationGlobalFlowDirection, Mode=OneWay}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <controls:WrapPanel Style="{StaticResource PageHeaderWrapPanelStyle}">

            <TextBlock x:Uid="LogsPageTitle" TextWrapping="WrapWholeWords" Style="{StaticResource BodyTextBlockStyle}" />

        </controls:WrapPanel>

        <controls:WrapPanel Orientation="Horizontal" Grid.Row="1" Margin="10" HorizontalSpacing="10" VerticalSpacing="10">
            <!-- ComboBox for selecting log files -->
            <ComboBox ItemsSource="{x:Bind ViewModel.LogFiles}"
                      SelectedItem="{x:Bind ViewModel.SelectedLogFile, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="systemIO:FileInfo">
                        <TextBlock Text="{x:Bind Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Button to refresh the logs -->
            <Button x:Uid="RefreshLogFilesButton"
                    Click="{x:Bind ViewModel.LoadLogFiles}"
                    Style="{StaticResource AccentButtonStyle}">
                <Button.ContentTemplate>
                    <DataTemplate x:DataType="x:String">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE895;" FontSize="16"/>
                            <TextBlock Text="{x:Bind}"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <Button Click="{x:Bind ViewModel.OpenLogsDirectory}" >
                <StackPanel Orientation="Horizontal" Spacing="4">

                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                              Glyph="&#xE838;"
                              VerticalAlignment="Center"/>

                    <TextBlock x:Uid="OpenLogsDirectoryButtonText"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Uid="CopySelectedButton" Click="{x:Bind ViewModel.CopySelectedLogLines}" >
                <Button.ContentTemplate>
                    <DataTemplate x:DataType="x:String">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8C8;" FontSize="16"/>
                            <TextBlock Text="{x:Bind}"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <!-- Search TextBox -->
            <TextBox x:Uid="SearchBoxTextBox"
                     MinWidth="300"
                     Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Progress Ring for loading indication -->
            <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                          Visibility="{x:Bind ViewModel.LoadingVisibility, Mode=OneWay}"
                          Width="24"
                          Height="24"
                          VerticalAlignment="Center" />

        </controls:WrapPanel>

        <ListView Grid.Row="2"
                  ItemsSource="{x:Bind ViewModel.LogCollection, Mode=OneWay}"
                  SelectionMode="Multiple"
                  IsItemClickEnabled="False"
                  Loaded="{x:Bind ViewModel.ListView_Loaded}"
                  ScrollViewer.HorizontalScrollMode="Disabled"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.VerticalScrollMode="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.ZoomMode="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="CC:LogLine">
                    <TextBlock Text="{x:Bind Text}"
                              TextWrapping="Wrap"
                              IsTextSelectionEnabled="True"
                              FontSize="18"
                              Margin="5"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>