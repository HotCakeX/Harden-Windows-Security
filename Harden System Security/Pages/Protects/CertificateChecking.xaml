<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HardenSystemSecurity.Pages.Protects.CertificateChecking"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:customUI="using:AppControlManager.CustomUIElements"
    xmlns:Vyre="using:HardenSystemSecurity.Vyre"
    FlowDirection="{x:Bind ViewModel.AppSettings.ApplicationGlobalFlowDirection, Mode=OneWay}">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <customUI:InfoBarV2 Grid.Row="0"
                    IsOpen="{x:Bind ViewModel.MainInfoBarIsOpen, Mode=TwoWay}"
                    Message="{x:Bind ViewModel.MainInfoBarMessage, Mode=OneWay}"
                    Severity="{x:Bind ViewModel.MainInfoBarSeverity, Mode=OneWay}"
                    IsClosable="{x:Bind ViewModel.MainInfoBarIsClosable, Mode=OneWay}" />

        <Border Grid.Row="1" Margin="0,5,0,5" Style="{StaticResource GridCardStyle}" Padding="8">

            <controls:WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                HorizontalSpacing="10"
                                VerticalSpacing="10">

                <ProgressRing Visibility="{x:Bind ViewModel.ProgressBarVisibility,Mode=OneWay}"
                              VerticalAlignment="Center"
                              Margin="5,0,0,0"
                              IsIndeterminate="True" />

                <TextBox IsEnabled="{x:Bind ViewModel.ElementsAreEnabled, Mode=OneWay}"
                         x:Uid="SearchCertificatesTextBox"
                         Text="{x:Bind ViewModel.SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center" />

                <ToggleButton IsChecked="{x:Bind ViewModel.IncludeExpiredCertificates, Mode=TwoWay}"
                              x:Uid="IncludeExpiredCertsToggleButton"
                              VerticalAlignment="Center"
                              IsEnabled="{x:Bind ViewModel.ElementsAreEnabled, Mode=OneWay}">
                    <ToggleButton.ContentTemplate>
                        <DataTemplate x:DataType="x:String">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE823;" FontSize="16"/>
                                <TextBlock Text="{x:Bind}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ToggleButton.ContentTemplate>
                </ToggleButton>

                <Button x:Uid="StartAnalysisButton"
                        VerticalAlignment="Center"
                        IsEnabled="{x:Bind ViewModel.ElementsAreEnabled, Mode=OneWay}"
                        Click="{x:Bind ViewModel.StartCertificateAnalysis}">
                    <Button.ContentTemplate>
                        <DataTemplate x:DataType="x:String">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE9D9;" FontSize="16"/>
                                <TextBlock Text="{x:Bind}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button x:Uid="GetLocalCertificatesButton"
                        VerticalAlignment="Center"
                        IsEnabled="{x:Bind ViewModel.ElementsAreEnabled, Mode=OneWay}"
                        Click="{x:Bind ViewModel.RetrieveAllCertificates}">
                    <Button.ContentTemplate>
                        <DataTemplate x:DataType="x:String">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE770;" FontSize="16"/>
                                <TextBlock Text="{x:Bind}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button x:Uid="ClearButton"
                        VerticalAlignment="Center"
                        IsEnabled="{x:Bind ViewModel.ElementsAreEnabled, Mode=OneWay}"
                        Click="{x:Bind ViewModel.ClearCertificateData}">
                    <Button.ContentTemplate>
                        <DataTemplate x:DataType="x:String">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xED62;" FontSize="16"/>
                                <TextBlock Text="{x:Bind}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button x:Uid="ExportToJsonButton"
                        VerticalAlignment="Center"
                        IsEnabled="{x:Bind ViewModel.ElementsAreEnabled, Mode=OneWay}"
                        Click="{x:Bind ViewModel.ExportToJson_Click}">
                    <Button.ContentTemplate>
                        <DataTemplate x:DataType="x:String">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE74E;" FontSize="16"/>
                                <TextBlock Text="{x:Bind}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <!-- CTL Header Info Button -->
                <Button x:Uid="CTLHeaderInfoFlyoutButton"
                        VerticalAlignment="Center"
                        IsEnabled="{x:Bind ViewModel.ElementsAreEnabled, Mode=OneWay}">
                    <Button.ContentTemplate>
                        <DataTemplate x:DataType="x:String">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE946;" FontSize="16"/>
                                <TextBlock Text="{x:Bind}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>

                    <Button.Flyout>
                        <Flyout>
                            <ScrollViewer>
                                <StackPanel Spacing="12" Margin="4">

                                    <TextBlock x:Uid="CertificatesCTLHeaderInfo"
                                               Style="{StaticResource SubtitleTextBlockStyle}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,16"/>

                                    <!-- PKCS7 Message Info -->
                                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="8">
                                        <StackPanel Spacing="6">
                                            <TextBlock Text="PKCS7 Message:" FontWeight="SemiBold" Style="{StaticResource BodyTextBlockStyle}"/>
                                            <TextBlock Text="  CMSG_SIGNED(2)" FontFamily="Consolas" Style="{StaticResource CaptionTextBlockStyle}"/>
                                            <TextBlock Text="  CMSG_SIGNED_DATA_PKCS_1_5_VERSION(1)" FontFamily="Consolas" Style="{StaticResource CaptionTextBlockStyle}"/>
                                            <TextBlock Text="  Content Type: '1.3.6.1.4.1.311.10.1' Certificate Trust List" FontFamily="Consolas" Style="{StaticResource CaptionTextBlockStyle}"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- CTL Information -->
                                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="8">
                                        <StackPanel Spacing="8">
                                            <TextBlock Text="Certificate Trust List:" FontWeight="SemiBold" Style="{StaticResource BodyTextBlockStyle}"/>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Version:" FontWeight="Medium"/>
                                                <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.CtlVersion, Mode=OneWay}" FontFamily="Consolas"/>
                                            </Grid>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Usage Entries:" FontWeight="Medium"/>
                                                <TextBlock Grid.Column="1" Text="1" FontFamily="Consolas"/>
                                            </Grid>

                                            <StackPanel>
                                                <TextBlock Text="Usage:" FontWeight="Medium" Margin="0,0,0,4"/>
                                                <TextBlock FontFamily="Consolas" Style="{StaticResource CaptionTextBlockStyle}">
                                                     <Run Text="  [0] "/>
                                                     <Run Text="{x:Bind ViewModel.CtlUsageOid, Mode=OneWay}"/>
                                                     <Run Text=" "/>
                                                     <Run Text="{x:Bind ViewModel.CtlUsageFriendlyName, Mode=OneWay}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Sequence Number:" FontWeight="Medium"/>
                                                <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.CtlSequenceNumber, Mode=OneWay}" FontFamily="Consolas"/>
                                            </Grid>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="ThisUpdate:" FontWeight="Medium"/>
                                                <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.CtlThisUpdate, Mode=OneWay}" FontFamily="Consolas"/>
                                            </Grid>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="NextUpdate:" FontWeight="Medium"/>
                                                <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.CtlNextUpdate, Mode=OneWay}" FontFamily="Consolas"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>

                                    <!-- Subject Algorithm -->
                                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="8">
                                        <StackPanel Spacing="8">
                                            <TextBlock Text="Subject Algorithm:" FontWeight="SemiBold" Style="{StaticResource BodyTextBlockStyle}"/>

                                            <StackPanel>
                                                <TextBlock Text="Algorithm ObjectId:" FontWeight="Medium" Margin="0,0,0,2"/>
                                                <TextBlock FontFamily="Consolas" Style="{StaticResource CaptionTextBlockStyle}">
                                                        <Run Text="{x:Bind ViewModel.CtlAlgorithmOid, Mode=OneWay}"/>
                                                        <Run Text=" "/>
                                                        <Run Text="{x:Bind ViewModel.CtlAlgorithmOidFriendlyName, Mode=OneWay}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <StackPanel>
                                                <TextBlock Text="Algorithm Parameters:" FontWeight="Medium" Margin="0,0,0,2"/>
                                                <TextBlock Text="{x:Bind ViewModel.CtlAlgorithmParameters, Mode=OneWay}"
                                       FontFamily="Consolas"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!-- CTL Entries Count -->
                                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="140"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="CTL Entries:" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.CtlEntryCount, Mode=OneWay}" FontFamily="Consolas" FontWeight="SemiBold"/>
                                        </Grid>
                                    </Border>

                                </StackPanel>
                            </ScrollViewer>
                        </Flyout>
                    </Button.Flyout>
                </Button>

                <!-- Total chip -->
                <Border CornerRadius="8"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Padding="10,6"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                        <FontIcon Glyph="&#xE8A9;" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                        <TextBlock VerticalAlignment="Center">
                 <Run x:Uid="TotalText" />
                 <Run Text="{x:Bind ViewModel.NonStlCertificates.Count, Mode=OneWay}" FontWeight="SemiBold" />
                        </TextBlock>
                    </StackPanel>
                </Border>

            </controls:WrapPanel>

        </Border>

        <customUI:ListViewV2 Grid.Row="2"
                             RegistryKey="CertificateChecking_NonStlCerts"
                             IsEnabled="{x:Bind ViewModel.ElementsAreEnabled, Mode=OneWay}"
                             ItemsSource="{x:Bind ViewModel.NonStlCertificates, Mode=OneWay}"
                             SelectionMode="Single">

            <customUI:ListViewV2.Header>

                <Border CornerRadius="5" Background="Black" customUI:StickyHeaderBehaviorV2.IsEnabled="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{x:Bind ViewModel.StoreLocationColumnWidth, Mode=TwoWay}" MinWidth="50" />
                            <ColumnDefinition Width="{x:Bind ViewModel.StoreNameColumnWidth, Mode=TwoWay}" MinWidth="50" />
                            <ColumnDefinition Width="{x:Bind ViewModel.SubjectColumnWidth, Mode=TwoWay}" MinWidth="50" />
                            <ColumnDefinition Width="{x:Bind ViewModel.IssuerColumnWidth, Mode=TwoWay}" MinWidth="50" />
                            <ColumnDefinition Width="{x:Bind ViewModel.ThumbprintColumnWidth, Mode=TwoWay}" MinWidth="50" />
                            <ColumnDefinition Width="{x:Bind ViewModel.RootSubjectColumnWidth, Mode=TwoWay}" MinWidth="50" />
                            <ColumnDefinition Width="{x:Bind ViewModel.RootSha256ColumnWidth, Mode=TwoWay}" MinWidth="50" />
                        </Grid.ColumnDefinitions>

                        <Button x:Uid="StoreLocationColumnHeaderBtn" Tag="StoreLocation" Grid.Column="0" Margin="10,0,0,0" Style="{StaticResource ListViewHeaderButton}" Click="{x:Bind ViewModel.HeaderColumnSortingButton_Click}" />
                        <Button x:Uid="StoreNameColumnHeaderBtn" Tag="StoreName" Grid.Column="1" Margin="0" Style="{StaticResource ListViewHeaderButton}" Click="{x:Bind ViewModel.HeaderColumnSortingButton_Click}" />
                        <Button x:Uid="SubjectColumnHeaderBtn" Tag="Subject" Grid.Column="2" Margin="0" Style="{StaticResource ListViewHeaderButton}" Click="{x:Bind ViewModel.HeaderColumnSortingButton_Click}" />
                        <Button x:Uid="IssuerColumnHeaderBtn" Tag="Issuer" Grid.Column="3" Margin="0" Style="{StaticResource ListViewHeaderButton}" Click="{x:Bind ViewModel.HeaderColumnSortingButton_Click}" />
                        <Button x:Uid="ThumbprintColumnHeaderBtn" Tag="Thumbprint" Grid.Column="4" Margin="0" Style="{StaticResource ListViewHeaderButton}" Click="{x:Bind ViewModel.HeaderColumnSortingButton_Click}" />
                        <Button x:Uid="RootSubjectColumnHeaderBtn" Tag="RootSubject" Grid.Column="5" Margin="0" Style="{StaticResource ListViewHeaderButton}" Click="{x:Bind ViewModel.HeaderColumnSortingButton_Click}" />
                        <Button x:Uid="RootSha256ColumnHeaderBtn" Tag="RootSha256" Grid.Column="6" Margin="0" Style="{StaticResource ListViewHeaderButton}" Click="{x:Bind ViewModel.HeaderColumnSortingButton_Click}" />

                        <!-- GridSplitters between columns -->
                        <controls:GridSplitter Grid.Column="1" />
                        <controls:GridSplitter Grid.Column="2" />
                        <controls:GridSplitter Grid.Column="3" />
                        <controls:GridSplitter Grid.Column="4" />
                        <controls:GridSplitter Grid.Column="5" />
                        <controls:GridSplitter Grid.Column="6" />

                    </Grid>
                </Border>
            </customUI:ListViewV2.Header>

            <!-- DataTemplate for ListView items -->
            <customUI:ListViewV2.ItemTemplate>
                <DataTemplate x:DataType="Vyre:NonStlRootCert" xmlns:VMs="using:HardenSystemSecurity.ViewModels">
                    <!-- Setting Background="Transparent" on the Grid makes it hit-test visible, meaning that even areas without any child elements (like empty spaces in the column) will respond to pointer events.  -->
                    <Grid Background="Transparent">
                        <Grid.ContextFlyout>
                            <MenuFlyout>

                                <MenuFlyoutItem x:Uid="CopyRow" Click="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.CopySelectedCertificates_Click}">
                                    <MenuFlyoutItem.KeyboardAccelerators>
                                        <KeyboardAccelerator Key="C" Modifiers="Control" Invoked="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.CopySelectedCertificates_Click}"/>
                                    </MenuFlyoutItem.KeyboardAccelerators>
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE8C8;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>

                                <MenuFlyoutSeparator />

                                <MenuFlyoutItem x:Uid="DeleteCertMenuFlyoutItem" Click="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.DeleteSelectedCertificate_Click}">
                                    <MenuFlyoutItem.KeyboardAccelerators>
                                        <KeyboardAccelerator Key="Delete" Invoked="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.DeleteSelectedCertificate_Click}"/>
                                    </MenuFlyoutItem.KeyboardAccelerators>
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE74D;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>

                                <MenuFlyoutSeparator />

                                <MenuFlyoutSubItem x:Uid="CopyIndividualItems">
                                    <MenuFlyoutSubItem.Icon>
                                        <FontIcon Glyph="&#xE8C8;" />
                                    </MenuFlyoutSubItem.Icon>

                                    <MenuFlyoutSubItem.Items>

                                        <MenuFlyoutItem x:Uid="StoreLocationHeader" Tag="StoreLocation" Click="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.CopyCertificateProperty_Click}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8C8;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutItem x:Uid="StoreNameHeader" Tag="StoreName" Click="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.CopyCertificateProperty_Click}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8C8;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutItem x:Uid="SubjectHeader" Tag="Subject" Click="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.CopyCertificateProperty_Click}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8C8;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutItem x:Uid="IssuerHeader" Tag="Issuer" Click="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.CopyCertificateProperty_Click}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8C8;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutItem x:Uid="ThumbprintHeader" Tag="Thumbprint" Click="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.CopyCertificateProperty_Click}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8C8;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutItem x:Uid="RootSubjectHeader" Tag="RootSubject" Click="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.CopyCertificateProperty_Click}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8C8;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutItem x:Uid="RootSha256Header" Tag="RootSha256" Click="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.CopyCertificateProperty_Click}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8C8;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                    </MenuFlyoutSubItem.Items>

                                </MenuFlyoutSubItem>

                            </MenuFlyout>
                        </Grid.ContextFlyout>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.StoreLocationColumnWidth, Mode=OneWay}" />
                            <ColumnDefinition Width="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.StoreNameColumnWidth, Mode=OneWay}" />
                            <ColumnDefinition Width="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.SubjectColumnWidth, Mode=OneWay}" />
                            <ColumnDefinition Width="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.IssuerColumnWidth, Mode=OneWay}" />
                            <ColumnDefinition Width="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.ThumbprintColumnWidth, Mode=OneWay}" />
                            <ColumnDefinition Width="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.RootSubjectColumnWidth, Mode=OneWay}" />
                            <ColumnDefinition Width="{x:Bind VMs:ViewModelProvider.CertificateCheckingVM.RootSha256ColumnWidth, Mode=OneWay}" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{x:Bind StoreLocationString}" Style="{StaticResource ListViewCellTextBlock}" Grid.Column="0"/>
                        <TextBlock Text="{x:Bind StoreNameString}" Style="{StaticResource ListViewCellTextBlock}" Grid.Column="1"/>
                        <TextBlock Text="{x:Bind Subject}" Style="{StaticResource ListViewCellTextBlock}" Grid.Column="2"/>
                        <TextBlock Text="{x:Bind Issuer}" Style="{StaticResource ListViewCellTextBlock}" Grid.Column="3"/>
                        <TextBlock Text="{x:Bind LeafThumbprintSha1}" Style="{StaticResource ListViewCellTextBlock}" Grid.Column="4"/>
                        <TextBlock Text="{x:Bind RootSubject}" Style="{StaticResource ListViewCellTextBlock}" Grid.Column="5"/>
                        <TextBlock Text="{x:Bind RootSha256Hex}" Style="{StaticResource ListViewCellTextBlock}" Grid.Column="6" FontFamily="Consolas"/>
                    </Grid>
                </DataTemplate>
            </customUI:ListViewV2.ItemTemplate>
        </customUI:ListViewV2>

    </Grid>
</Page>