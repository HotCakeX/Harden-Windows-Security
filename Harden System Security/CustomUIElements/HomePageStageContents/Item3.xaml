<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="AppControlManager.CustomUIElements.HomePageStageContents.Item3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="{x:Bind OnLoadedInitCore}"
    Unloaded="{x:Bind OnUserControlUnloaded}">

    <!-- Inline host for the embedded player. We will temporarily reparent the WebView2
         into the page-level 'ContentHost' Grid (declared in Home.xaml) when the site
         enters HTML fullscreen, and then restore it back here when fullscreen exits. -->
    <Grid x:Name="InlineHost">
        <WebView2 x:Name="PlayerView"
                  DefaultBackgroundColor="Transparent"
                  CoreWebView2Initialized="{x:Bind OnCoreWebView2Initialized}"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"/>
    </Grid>
</UserControl>