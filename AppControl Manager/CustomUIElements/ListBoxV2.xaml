<UserControl
    x:Class="AppControlManager.CustomUIElements.ListBoxV2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customUI="using:AppControlManager.CustomUIElements"
    xmlns:siPolicy="using:AppControlManager.SiPolicy">

    <UserControl.Resources>

        <!-- Template for plain Strings -->
        <DataTemplate x:Key="StringItemTemplate" x:DataType="x:String">
            <Grid ColumnSpacing="8" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{x:Bind}"
                           TextWrapping="WrapWholeWords"
                           VerticalAlignment="Center" />

                <!-- Tag binds to the string itself -->
                <Button Grid.Column="1"
                        Padding="6,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        ToolTipService.ToolTip="Remove"
                        Tag="{x:Bind}"
                        Click="DeleteItem_Click"
                        MinWidth="32">
                    <FontIcon Glyph="&#xE74D;" />
                </Button>
            </Grid>
        </DataTemplate>

        <!-- Template for PolicyFileRepresent Objects -->
        <DataTemplate x:Key="PolicyItemTemplate" x:DataType="siPolicy:PolicyFileRepresent">
            <Grid ColumnSpacing="8" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Bind Text to PolicyIdentifier -->
                <TextBlock Grid.Column="0"
                           Text="{x:Bind PolicyIdentifier}"
                           TextWrapping="WrapWholeWords"
                           VerticalAlignment="Center" />

                <!-- Bind Tag to PolicyFileRepresent itself -->
                <Button Grid.Column="1"
                        Padding="6,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        ToolTipService.ToolTip="Remove"
                        Tag="{x:Bind}"
                        Click="DeleteItem_Click"
                        MinWidth="32">
                    <FontIcon Glyph="&#xE74D;" />
                </Button>
            </Grid>
        </DataTemplate>

        <!-- The Selector -->
        <customUI:ListBoxItemTemplateSelector x:Key="ListBoxItemTemplateSelector"
                                              StringTemplate="{StaticResource StringItemTemplate}"
                                              PolicyTemplate="{StaticResource PolicyItemTemplate}" />
    </UserControl.Resources>

    <Grid>
        <ListBox MinWidth="{x:Bind MinWidth, Mode=OneWay}"
                 ItemsSource="{x:Bind ItemsSource, Mode=OneWay}"
                 ItemTemplateSelector="{StaticResource ListBoxItemTemplateSelector}"
                 SelectionMode="{x:Bind SelectionMode, Mode=OneWay}"
                 HorizontalContentAlignment="Stretch">
        </ListBox>
    </Grid>
</UserControl>
