<?xml version="1.0" encoding="utf-8"?>
<customUI:ContentDialogV2
    x:Class="AppControlManager.Pages.PolicyAssignmentsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:MSGraph="using:CommonCore.MicrosoftGraph"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:customUI="using:AppControlManager.CustomUIElements"
    Title="{x:Bind TitleString, Mode=OneWay}"
    Loaded="{x:Bind PolicyAssignmentsDialog_Loaded}"
    CloseButtonText="Close"
    DefaultButton="Close">

    <ContentDialog.Resources>
        <LinearGradientBrush x:Key="AssignmentBorderBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0078D7" Offset="0"/>
            <GradientStop Color="#5C2D91" Offset="1"/>
        </LinearGradientBrush>
    </ContentDialog.Resources>

    <Grid MinWidth="400" MinHeight="250">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{x:Bind PolicyName}"
                   Style="{StaticResource SubtitleTextBlockStyle}"
                   Margin="0,0,0,10"/>

        <!-- Progress Indicator -->
        <ProgressRing Grid.Row="1" IsActive="{x:Bind IsLoading, Mode=OneWay}"
                      Visibility="{x:Bind IsLoading, Mode=OneWay}"
                      HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Message for no assignments -->
        <TextBlock Grid.Row="2"
                   x:Uid="NoAssignmentsFound"
                   Visibility="{x:Bind NoAssignmentsVisibility, Mode=OneWay}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

        <!-- Assignments List -->
        <ScrollViewer Grid.Row="2" Visibility="{x:Bind AssignmentsListVisibility, Mode=OneWay}">
            <ItemsControl ItemsSource="{x:Bind Assignments}" Margin="6,0,6,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="MSGraph:PolicyAssignmentDisplay">
                        <Border Padding="12" Margin="0,0,0,12" CornerRadius="8"
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                BorderBrush="{StaticResource AssignmentBorderBrush}"
                                BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Spacing="6">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE716;" FontSize="14" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                        <TextBlock Text="Name:" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Text="{x:Bind Name}" FontWeight="Bold"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE8CB;" FontSize="14" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                        <TextBlock Text="Type:" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Text="{x:Bind Type}"/>
                                    </StackPanel>

                                    <!-- ID Field -->
                                    <StackPanel Orientation="Horizontal" Spacing="8" Visibility="{x:Bind IdVisibility}">
                                        <FontIcon Glyph="&#xE946;" FontSize="14" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                                        <TextBlock Text="ID:" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Text="{x:Bind TargetId}" FontFamily="Consolas"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Delete Button -->
                                <Button Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"
                                        Click="DeleteAssignment_Click"
                                        x:Uid="RemoveAssignmentButton">
                                    <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="Red"/>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</customUI:ContentDialogV2>
