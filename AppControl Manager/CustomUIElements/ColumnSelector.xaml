<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="AppControlManager.CustomUIElements.ColumnSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:others="using:AppControlManager.Others"
    mc:Ignorable="d">

    <DropDownButton x:Uid="ColumnsDropDownButton"
                    IsEnabled="{x:Bind IsEnabled, Mode=OneWay}">
        <DropDownButton.ContentTemplate>
            <DataTemplate x:DataType="x:String">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE9A4;" FontSize="16"/>
                    <TextBlock Text="{x:Bind}"/>
                </StackPanel>
            </DataTemplate>
        </DropDownButton.ContentTemplate>

        <DropDownButton.Flyout>
            <Flyout>

                <StackPanel Orientation="Vertical">

                    <!-- Select All / Deselect All Buttons -->
                    <Button x:Uid="SelectAllButton" Margin="0,0,0,6" HorizontalAlignment="Center" Click="{x:Bind SelectAll_Click}">
                        <Button.ContentTemplate>
                            <DataTemplate x:DataType="x:String">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8B3;" FontSize="16"/>
                                    <TextBlock Text="{x:Bind}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    <Button x:Uid="DeSelectAllButton" Margin="0,0,0,6" HorizontalAlignment="Center" Click="{x:Bind DeselectAll_Click}">
                        <Button.ContentTemplate>
                            <DataTemplate x:DataType="x:String">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8E6;" FontSize="16"/>
                                    <TextBlock Text="{x:Bind}"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <MenuFlyoutSeparator Margin="0,0,0,6" />

                    <!-- Column List -->
                    <ListView ItemsSource="{x:Bind ItemsSource, Mode=OneWay}"
                              SelectionMode="None"
                              MaxHeight="400">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="others:ColumnSelectionItem">
                                <CheckBox Content="{x:Bind Name}"
                                          IsChecked="{x:Bind IsChecked, Mode=TwoWay}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Flyout>
        </DropDownButton.Flyout>
    </DropDownButton>
</UserControl>
