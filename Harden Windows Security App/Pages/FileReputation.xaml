<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="HardenWindowsSecurity.Pages.FileReputation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HardenWindowsSecurity.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:ani="using:CommunityToolkit.WinUI.Animations"
    xmlns:customUI="using:AppControlManager.CustomUIElements"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:protect="using:HardenWindowsSecurity.Protect"
    FlowDirection="{x:Bind ViewModel.AppSettings.ApplicationGlobalFlowDirection, Mode=OneWay}"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controls:WrapPanel Grid.Row="0" VerticalSpacing="4" HorizontalSpacing="4" Orientation="Vertical" Margin="6,10,6,10">

            <TextBlock x:Uid="FileReputationPageTitle" TextWrapping="WrapWholeWords" Style="{StaticResource BodyTextBlockStyle}" />

            <HyperlinkButton x:Uid="GuideButtonAtTop" NavigateUri="https://github.com/HotCakeX/Harden-Windows-Security" />

        </controls:WrapPanel>

        <customUI:InfoBarV2 Grid.Row="1"
                         IsOpen="{x:Bind ViewModel.MainInfoBarIsOpen, Mode=TwoWay}"
                         Message="{x:Bind ViewModel.MainInfoBarMessage, Mode=OneWay}"
                         Severity="{x:Bind ViewModel.MainInfoBarSeverity, Mode=OneWay}"
                         IsClosable="{x:Bind ViewModel.MainInfoBarIsClosable, Mode=OneWay}" />

        <Border Grid.Row="2" Margin="0,10,0,10" Style="{StaticResource GridCardStyle}" Padding="8">

            <controls:WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             HorizontalSpacing="10"
                             VerticalSpacing="10">

                <ProgressRing Visibility="{x:Bind ViewModel.ProgressBarVisibility,Mode=OneWay}"
                              VerticalAlignment="Center"
                              IsIndeterminate="True" />

                <Button x:Uid="GenericBrowseButton"
                        VerticalAlignment="Center"
                        Click="{x:Bind ViewModel.BrowseForFile}" />

            </controls:WrapPanel>
        </Border>

        <ScrollViewer Grid.Row="3"
                      Margin="20,10,20,10"
                      HorizontalScrollMode="Disabled"
                      VerticalScrollMode="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">

            <StackPanel Spacing="15" MaxWidth="600" HorizontalAlignment="Center">

                <!-- Reputation Section -->
                <Border Style="{StaticResource GridCardStyle}"
                        Padding="20"
                        CornerRadius="8">
                    <ani:Implicit.HideAnimations>
                        <ani:OpacityAnimation Duration="0:0:0.3" To="0.0"/>
                        <ani:TranslationAnimation Duration="0:0:0.3" To="0,-20,0"/>
                    </ani:Implicit.HideAnimations>
                    <ani:Implicit.ShowAnimations>
                        <ani:OpacityAnimation Duration="0:0:0.5" From="0.0" To="1.0" Delay="0:0:0.1"/>
                        <ani:TranslationAnimation Duration="0:0:0.5" From="0,-20,0" To="0,0,0" Delay="0:0:0.1"/>
                    </ani:Implicit.ShowAnimations>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                   x:Uid="ReputationText"
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   Margin="0,0,0,10"/>

                        <TextBox Grid.Row="1" Grid.Column="0"
                                 Text="{x:Bind ViewModel.ReputationText, Mode=OneWay}"
                                 MinWidth="120"
                                 IsReadOnly="True"
                                 Background="Transparent"
                                 BorderThickness="1"
                                 BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                 CornerRadius="4"
                                 Padding="12,8"
                                 Margin="0,0,10,0"/>

                        <Button Grid.Row="1" Grid.Column="1"
                                Content="&#xE8C8;"
                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                x:Uid="CopyToClipBoard"
                                Click="{x:Bind ViewModel.CopyReputationToClipboard}"
                                Style="{StaticResource AccentButtonStyle}"
                                Width="40"
                                Height="40">
                            <ani:Implicit.HideAnimations>
                                <ani:ScaleAnimation Duration="0:0:0.2" To="0.8"/>
                            </ani:Implicit.HideAnimations>
                            <ani:Implicit.ShowAnimations>
                                <ani:ScaleAnimation Duration="0:0:0.2" From="0.8" To="1.0"/>
                            </ani:Implicit.ShowAnimations>
                        </Button>
                    </Grid>
                </Border>

                <!-- Source Section -->
                <Border Style="{StaticResource GridCardStyle}"
                        Padding="20"
                        CornerRadius="8">
                    <ani:Implicit.HideAnimations>
                        <ani:OpacityAnimation Duration="0:0:0.3" To="0.0"/>
                        <ani:TranslationAnimation Duration="0:0:0.3" To="0,-20,0"/>
                    </ani:Implicit.HideAnimations>
                    <ani:Implicit.ShowAnimations>
                        <ani:OpacityAnimation Duration="0:0:0.5" From="0.0" To="1.0" Delay="0:0:0.2"/>
                        <ani:TranslationAnimation Duration="0:0:0.5" From="0,-20,0" To="0,0,0" Delay="0:0:0.2"/>
                    </ani:Implicit.ShowAnimations>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                   x:Uid="SourceText"
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   Margin="0,0,0,10"/>

                        <TextBox Grid.Row="1" Grid.Column="0"
                                 Text="{x:Bind ViewModel.SourceText, Mode=OneWay}"
                                 IsReadOnly="True"
                                 MinWidth="120"
                                 Background="Transparent"
                                 BorderThickness="1"
                                 BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                 CornerRadius="4"
                                 Padding="12,8"
                                 Margin="0,0,10,0"/>

                        <Button Grid.Row="1" Grid.Column="1"
                                Content="&#xE8C8;"
                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                x:Uid="CopyToClipBoard"
                                Click="{x:Bind ViewModel.CopySourceToClipboard}"
                                Style="{StaticResource AccentButtonStyle}"
                                Width="40"
                                Height="40">
                            <ani:Implicit.HideAnimations>
                                <ani:ScaleAnimation Duration="0:0:0.2" To="0.8"/>
                            </ani:Implicit.HideAnimations>
                            <ani:Implicit.ShowAnimations>
                                <ani:ScaleAnimation Duration="0:0:0.2" From="0.8" To="1.0"/>
                            </ani:Implicit.ShowAnimations>
                        </Button>
                    </Grid>
                </Border>

                <!-- Duration Section -->
                <Border Style="{StaticResource GridCardStyle}"
                        Padding="20"
                        CornerRadius="8">
                    <ani:Implicit.HideAnimations>
                        <ani:OpacityAnimation Duration="0:0:0.3" To="0.0"/>
                        <ani:TranslationAnimation Duration="0:0:0.3" To="0,-20,0"/>
                    </ani:Implicit.HideAnimations>
                    <ani:Implicit.ShowAnimations>
                        <ani:OpacityAnimation Duration="0:0:0.5" From="0.0" To="1.0" Delay="0:0:0.3"/>
                        <ani:TranslationAnimation Duration="0:0:0.5" From="0,-20,0" To="0,0,0" Delay="0:0:0.3"/>
                    </ani:Implicit.ShowAnimations>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                   x:Uid="DurationText"
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   Margin="0,0,0,10"/>

                        <TextBox Grid.Row="1" Grid.Column="0"
                                 Text="{x:Bind ViewModel.DurationText, Mode=OneWay}"
                                 IsReadOnly="True"
                                 MinWidth="120"
                                 Background="Transparent"
                                 BorderThickness="1"
                                 BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                 CornerRadius="4"
                                 Padding="12,8"
                                 Margin="0,0,10,0"/>

                        <Button Grid.Row="1" Grid.Column="1"
                                Content="&#xE8C8;"
                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                x:Uid="CopyToClipBoard"
                                Click="{x:Bind ViewModel.CopyDurationToClipboard}"
                                Style="{StaticResource AccentButtonStyle}"
                                Width="40"
                                Height="40">
                            <ani:Implicit.HideAnimations>
                                <ani:ScaleAnimation Duration="0:0:0.2" To="0.8"/>
                            </ani:Implicit.HideAnimations>
                            <ani:Implicit.ShowAnimations>
                                <ani:ScaleAnimation Duration="0:0:0.2" From="0.8" To="1.0"/>
                            </ani:Implicit.ShowAnimations>
                        </Button>
                    </Grid>
                </Border>

                <!-- Handle Section -->
                <Border Style="{StaticResource GridCardStyle}"
                        Padding="20"
                        CornerRadius="8">
                    <ani:Implicit.HideAnimations>
                        <ani:OpacityAnimation Duration="0:0:0.3" To="0.0"/>
                        <ani:TranslationAnimation Duration="0:0:0.3" To="0,-20,0"/>
                    </ani:Implicit.HideAnimations>
                    <ani:Implicit.ShowAnimations>
                        <ani:OpacityAnimation Duration="0:0:0.5" From="0.0" To="1.0" Delay="0:0:0.4"/>
                        <ani:TranslationAnimation Duration="0:0:0.5" From="0,-20,0" To="0,0,0" Delay="0:0:0.4"/>
                    </ani:Implicit.ShowAnimations>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="Handle"
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   Margin="0,0,0,10"/>

                        <TextBox Grid.Row="1" Grid.Column="0"
                                 Text="{x:Bind ViewModel.HandleText, Mode=OneWay}"
                                 IsReadOnly="True"
                                 MinWidth="120"
                                 Background="Transparent"
                                 BorderThickness="1"
                                 BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                 CornerRadius="4"
                                 Padding="12,8"
                                 Margin="0,0,10,0"/>

                        <Button Grid.Row="1" Grid.Column="1"
                                Content="&#xE8C8;"
                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                x:Uid="CopyToClipBoard"
                                Click="{x:Bind ViewModel.CopyHandleToClipboard}"
                                Style="{StaticResource AccentButtonStyle}"
                                Width="40"
                                Height="40">
                            <ani:Implicit.HideAnimations>
                                <ani:ScaleAnimation Duration="0:0:0.2" To="0.8"/>
                            </ani:Implicit.HideAnimations>
                            <ani:Implicit.ShowAnimations>
                                <ani:ScaleAnimation Duration="0:0:0.2" From="0.8" To="1.0"/>
                            </ani:Implicit.ShowAnimations>
                        </Button>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>