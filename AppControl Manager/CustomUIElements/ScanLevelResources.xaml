<ResourceDictionary
    x:Class="AppControlManager.CustomUIElements.ScanLevelResources"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:intelgathering="using:AppControlManager.IntelGathering">

    <DataTemplate x:Key="ScanLevelComboBoxTemplate" x:DataType="intelgathering:ScanLevelsComboBoxType">
        <StackPanel Orientation="Vertical" Spacing="4">

            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock Text="{x:Bind FriendlyName}" Margin="0,0,4,0" VerticalAlignment="Center"/>
                <RatingControl IsReadOnly="True" Value="{x:Bind Rating}" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock Text="Fallbacks:" Style="{ThemeResource CaptionTextBlockStyle}" VerticalAlignment="Center" Opacity="0.7"/>

                <ItemsControl ItemsSource="{x:Bind FallbackChain}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="intelgathering:FallbackItem">
                            <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">

                                <Border Background="{ThemeResource LayerFillColorAltBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="6,2">
                                    <TextBlock Text="{x:Bind Name}" 
                                               Style="{ThemeResource CaptionTextBlockStyle}" 
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </Border>

                                <FontIcon Glyph="&#xE76C;" 
                                          FontSize="8" 
                                          Visibility="{x:Bind ChevronVisibility}" 
                                          Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

        </StackPanel>
    </DataTemplate>

</ResourceDictionary>
